{# templates/user/_form.html.twig #}

{{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="form-group">
    {{ form_row(form.firstname, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
    {{ form_row(form.lastname, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
    {{ form_row(form.address1, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
    {{ form_row(form.zipcode, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
    {{ form_row(form.city, {'attr': {'class': 'form-control'}}) }}
    </div>
    <button class="btn {{ button_color|default('btn-outline-primary') }}  mt-3">{{ button_label|default('Create User') }}</button>
{{ form_end(form) }}